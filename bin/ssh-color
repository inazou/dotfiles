#!/bin/bash

function set_term_bgcolor() {
  local R=${1}*65535/255
  local G=${2}*65535/255
  local B=${3}*65535/255

  /usr/bin/osascript <<EOF
  tell application "iTerm2"
    tell current session of current window
      set background color to {$R, $G, $B}
    end tell
  end tell
EOF
}

if [[ "$@" =~ gateway ]]; then
  set_term_bgcolor 40 0 0
fi

ssh $@

set_term_bgcolor 0 0 0
